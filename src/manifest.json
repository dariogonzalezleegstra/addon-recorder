{
  "manifest_version": 2,
  "author": "LIFIA",
  "name": "Recorder Tool",
  "version": "1.0",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "content_scripts/main.js"
    ]
  }],
  "background":{
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "background/main.js"
    ]
  },
  "browser_action": {
    "default_title": "Recorder",
    "browser_style": true
  },
  "permissions": [
    "<all_urls>",
    "tabs"
  ]
}
